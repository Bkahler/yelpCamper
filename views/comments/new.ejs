<% include ../partials/header %>

<div class="container"><!-- start of main container -->
  <div class="row"><!-- start of main row -->
    <h1 style="text-align:center;">Add a New Comment to <%=campground.name%></h1>
    <div style="width:30%; margin:0 auto;">
      <form action="/campgrounds/<%=campground.id%>/comments" method="POST">
        <div class="form-group">
          <input class="form-control" type="text" name="comment[text]" placeholder="Comment text...">
        </div>
        <div class="form-group">
          <button class="btn btn-block btn-lg btn-primary">Add Comment</button>  
        </div>
      </form>
      <a href="/campgrounds">...back </a> 
    </div>
  </div><!-- end of main row -->
</div><!-- end of main container -->

<% include ../partials/footer %>
